<div class="container">

  <div class="form-signin sign_up_box">
      <div class="form-signin-heading">
        <h2>Log in</h2>
      </div>

      <br/>
      <%= form_tag "/login" do %>

        <%= label_tag "inputUsername", "Username", class: "sr-only" %>
        <%= text_field_tag "username", nil, class: "form-control", type: "text", placeholder: "Username" %>

        <%= label_tag "inputPassword", "Password", class: "sr-only" %>
        <%= password_field_tag "password", nil, class: "form-control", type: "password", placeholder: "Password" %>

        <br/>
        <p>
          <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %>
        </p>

        <% end %>
  </div>

</div>
